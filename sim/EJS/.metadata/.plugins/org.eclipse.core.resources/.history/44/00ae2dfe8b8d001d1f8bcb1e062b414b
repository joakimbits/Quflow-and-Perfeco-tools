
import java.awt.*;
import java.awt.event.*;

public class WhiteboardWindowAdapter extends WindowAdapter {

  private WhiteboardFrame dWhiteboardFrame;

  public WhiteboardWindowAdapter (WhiteboardFrame aWhiteboardFrame) {
    dWhiteboardFrame = aWhiteboardFrame;
  }

  public void windowClosing (WindowEvent we) {
    dWhiteboardFrame.setVisible(false);
  }

}
